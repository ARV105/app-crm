<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 x:Class="MobileCRM.Shared.Pages.Catalog.CatalogView">

	<ScrollView>
	
	<StackLayout Padding="20" Spacing="20">
		<StackLayout.BackgroundColor>
			<OnPlatform x:TypeArguments="Color">
				<OnPlatform.iOS>White</OnPlatform.iOS>
				<OnPlatform.Android>White</OnPlatform.Android>
			</OnPlatform>
		</StackLayout.BackgroundColor>

		<Label Text="{Binding Product.ItemName}" Font="Bold, Large" HorizontalOptions="Center" />
		
		<Image Source="{Binding Product.ImageSrc}" />
		
		<Label Text="{Binding SuggestedPrice}" Font="Bold" HorizontalOptions="Center" />

		<Label Text="{Binding Product.Description}" />
	</StackLayout>

	</ScrollView>
		
</ContentPage>