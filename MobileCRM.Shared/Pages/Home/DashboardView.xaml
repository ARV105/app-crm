<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="MobileCRM.Shared.Pages.Home.DashboardView"
                       xmlns:controls="clr-namespace:MobileCRM.CustomControls;assembly=MobileCRM.CustomControls"
                       Title ="Mobile CRM">
    <ScrollView>
	 <StackLayout Padding="20" Spacing="20">

        <Label Text="Sales Dashboard" Font="Bold, Large" HorizontalOptions="Center" />
        <Label Text="6-Week Sales" HorizontalOptions="Center" />
        <controls:BarChart x:Name="Chart"  HeightRequest="300" HorizontalOptions="FillAndExpand"/>
        <controls:PieChart x:Name="MyPie"  HeightRequest="300" HorizontalOptions="FillAndExpand" />

    </StackLayout>

    </ScrollView>
</ContentPage>