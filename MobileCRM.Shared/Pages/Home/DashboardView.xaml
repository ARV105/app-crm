<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="MobileCRM.Shared.Pages.Home.DashboardView"
                       xmlns:controls="clr-namespace:MobileCRM.Shared.CustomControls;assembly=MobileCRM.Shared"
                       Title ="Mobile CRM">
    <ScrollView>
	 <StackLayout Padding="20" Spacing="20">
        <StackLayout.BackgroundColor>
            <OnPlatform x:TypeArguments="Color">
                <OnPlatform.iOS>White</OnPlatform.iOS>
                <OnPlatform.Android>White</OnPlatform.Android>
            </OnPlatform>
        </StackLayout.BackgroundColor>

        <Label Text="Sales Dashboard" Font="Bold, Large" HorizontalOptions="Center" />
        <Label Text="6-Week Sales" HorizontalOptions="Center" />

        <ActivityIndicator IsRunning = "{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>

        <controls:BarChart x:Name="BarChart"  HeightRequest="250" HorizontalOptions="FillAndExpand"/>

        <Label Text="Sales by Category" HorizontalOptions="Center" />

         <controls:PieChart x:Name="MyPie"  HeightRequest="250" HorizontalOptions="FillAndExpand" />

    </StackLayout>

    </ScrollView>
</ContentPage>