<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 x:Class="MobileCRM.Pages.Leads.LeadsView"  
						 xmlns:controls="clr-namespace:MobileCRM.CustomControls;assembly=MobileCRM.CustomControls"
						 xmlns:local="clr-namespace:MobileCRM.Helpers;assembly=MobileCRM"
						 Title="{Binding Title}"
						 Icon="{Binding Icon}">
	
	
		<ContentPage.Content>
				<StackLayout>
						<ActivityIndicator IsRunning = "{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
						<ListView x:Name="LeadsList" ItemsSource="{Binding Leads}" ItemTapped="OnItemSelected" 
                      BackgroundColor="{x:Static local:AppColors.CONTENTBKGCOLOR}" >
								<ListView.ItemTemplate>
										<DataTemplate>
												<controls:ListTextCell Text="{Binding Company}" Detail="{Binding CitySt}"/>
										</DataTemplate>
								</ListView.ItemTemplate>
						</ListView>
				</StackLayout>
		</ContentPage.Content>
</ContentPage>